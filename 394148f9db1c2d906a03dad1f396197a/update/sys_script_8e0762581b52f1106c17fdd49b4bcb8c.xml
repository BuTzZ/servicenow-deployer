        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var grDeployment = current.deployment.getRefRecord();
	if (grDeployment.state == GetDeploymentState('inprogress'))
	{
		var grTask = new GlideRecord('x_snc_deployer_deployment_task');
		grTask.addQuery('deployment','=',current.deployment.sys_id);
		grTask.orderBy('order');
		grTask.addQuery('state','=',GetDeploymentTaskState('pending'));
		grTask.setLimit(1);
		grTask.query();
		if (grTask.next())
		{
			grTask.state = GetDeploymentTaskState('inprogress');
			grTask.update();
		}		
	}
	
	

})(current, previous);]]></script>
